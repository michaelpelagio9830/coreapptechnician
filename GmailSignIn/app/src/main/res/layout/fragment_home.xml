<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/intro"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi Almira! Welcome to CORE"
            android:textSize="20sp"
            android:textStyle="italic"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CORE"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#6b6b83"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complaint and Response is a Complaint Desk System that aims to reach more customers in terms of tech support."
            android:inputType="textMultiLine"
            android:textSize="18sp"
            android:textColor="#6b6b83"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:background="@drawable/background_home">

            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_complaint"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAKE A COMPLAINT"
                    android:textStyle="bold"
                    android:textColor="#6b6b83"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to the Complaint Tab to be able to make a ticket request for tech support."/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rateus"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:background="@drawable/background_home">

            <ImageView
                android:layout_width="101dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:src="@drawable/feedback" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RATE US"
                    android:textStyle="bold"
                    android:textColor="#6b6b83"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help us improve our service through clicking this."/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ratepopup"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/messageRate"
                android:padding="5dp"
                android:background="@layout/field_design"
                android:layout_width="match_parent"
                android:layout_gravity="start"
                android:layout_height="50dp"
                android:inputType="textMultiLine"
                android:hint="Type a feedback."/>

            <Button
                android:id="@+id/submitRate"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Submit"
                android:textColor="#6b6b83"/>

        </LinearLayout>


    </LinearLayout>



</ScrollView>